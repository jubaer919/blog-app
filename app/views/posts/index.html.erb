<div class="user-container">
<div class="user-container">
<div clsss = 'user-item'>
<div class="user-item-container">
  <div class = 'img-container'>
    <img src="<%= @user.photo %>" alt="Description of your image" class="img">
  </div>
  <div class = 'user-info'>
    <h2> <%= @user.name -%> </h2>
    <p> Number of posts: <%= @user.posts_counter -%> </p>
  </div>
  </div>
</div>
<%= link_to 'Add New Post', new_user_post_path(@user), class: "add-post" %>
  <div class='user-posts'>
    <% @posts.each do |post| %>
      <%= link_to user_post_path(@user, post) do %>
        <div class="post-container">
          <h3>Post #<%= post.id %></h3>
          <p> <%= post.text %> </p>
          <div class="posts-s-container">
            <p>Comments: <%= post.comments_counter -%>
            <p>Likes: <%= post.likes_counter %>
          </div>
          
        </div>
        <div class="comment-container">
           <% post.most_recent_comments.each do |comment|%>
                <p></p><span><%= comment.user.name%> : <%= comment.text%></span></p>
            <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div>
    <a class='pagination-btn' href='#'>Pagination</a>
  </div>
</div>
</div>