
<div class="user-container">
<div class="user-container">

<div clsss = 'user-item'>
<div class="user-item-container">
  <div class = 'img-container'>
    <img src="<%= @user.photo %>" alt="Description of your image" class="img">
  </div>
  <div class = 'user-info'>
    <h2> <%= @user.name -%> </h2>
    <p> Number of posts: <%= @user.posts_counter -%> </p>
  </div>
  </div>
</div>
<div class = 'bio-container'>
  <h3>Bio</h3>
  <p><%= @user.bio %><p>
</div>
<div class = 'recent-posts'>
  <% if @user.most_recent_posts.any? %>
    <ul>
      <% @user.most_recent_posts.each do |post| %>
        <%= link_to user_post_path(@user, post) do %>
        <div class="post-container">
          <h3>Post #<%= post.id %></h3>
          <p> <%= post.text %> </p>
          <div class="posts-s-container">
            <p>Comments: <%= post.comments_counter -%>
            <p>Likes: <%= post.likes_counter %>
          </div>
        </div>
        <% end %>
      <% end %>
    </ul>
  <% else %>
    <p>The user have no post yet!</p>
  <% end %>
</div>
<div class="post-btn-container">
  <%= link_to "See all posts", user_posts_path(user_id: @user.id), class: "all-post" %>
</div>
</div>
</div>