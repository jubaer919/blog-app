<% if @users.blank? %>
  <h1>There are no users in the system</h1>
<% else %>
  <h1 class="heading-primary">List of Current Users</h1>
  <ul class="user-container">
    <% @users.each do |user| %>
      <li class="user-item">
        <%= link_to user_path(user) do %>
        <div class="user-item-container">
          <div class="img-container">
            <img src="<%= user.photo %>" alt="discription of the image" class="img">
          </div>
          <div class="user-info">
            <h2><%= user.name -%></h2>
            <p>Number of posts: <%= user.posts_counter -%></p>
          </div>
        </div>
        <% end %>
      </li>
    <%end%>
  </ul>
<% end %>

